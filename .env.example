# =============================================================================
# BUSINESS REPORTING APP - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# Server
PORT=5001
NODE_ENV=production

# Database (relative to root directory)
DATABASE_URL=file:./data/prod.db

# JWT Authentication (MUST change in production!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-change-in-production

# Token expiration
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7

# File uploads (relative to root directory)
UPLOAD_DIR=./uploads

# Frontend API URL (change for production domain)
NEXT_PUBLIC_API_URL=http://localhost:5001/api

# CORS origin for production (your domain)
CORS_ORIGIN=https://yourdomain.com

# Optional: HTTPS (set ENABLE_HTTPS=0 to disable)
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem