# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=development
# Options: development, production, test

# =============================================================================
# DOMAIN AND URL CONFIGURATION
# =============================================================================
# Domain name for production (without https://)
DOMAIN=yourdomain.com

# API URL for frontend (development will use http://localhost:8443/api)
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database file path
DATABASE_URL=file:./data/dev.db
# For production: file:./data/prod.db

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT Secret key - MUST be changed for production!
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production

# JWT Token expiration times
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Directory for uploaded files
UPLOAD_DIR=./uploads

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=52428800
# 50MB = 52428800 bytes

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend server port
PORT=5000

# CORS origin for production
CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# BACKUP CONFIGURATION (Production only)
# =============================================================================
# Cron schedule for database backups (default: daily at 2 AM)
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# SSL CERTIFICATE PATHS (Production only)
# =============================================================================
# Path to SSL certificate files (inside container)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Log level for application logs
LOG_LEVEL=info
# Options: error, warn, info, debug

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting for API endpoints (requests per second)
API_RATE_LIMIT=5
GENERAL_RATE_LIMIT=10
LOGIN_RATE_LIMIT=1

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check timeout in milliseconds
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# DATABASE MIGRATION AND SEEDING
# =============================================================================
# Whether to run database migrations on startup
AUTO_MIGRATE=true

# Whether to seed the database with initial data
AUTO_SEED=false

# =============================================================================
# DOCKER AND DEPLOYMENT
# =============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=business-reporting

# Network name for Docker services
NETWORK_NAME=app-network

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable hot reload for frontend development
WATCHPACK_POLLING=true

# Enable development debugging
DEBUG=false

# Development database name
DEV_DATABASE_URL=file:./data/dev.db

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================
# Node.js memory limit
NODE_OPTIONS=--max-old-space-size=1024

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session secret for additional security
SESSION_SECRET=another-secure-random-string-for-sessions

# Enable HTTPS redirect in production
FORCE_HTTPS=true

# Content Security Policy
CSP_ENABLED=true

# =============================================================================
# EXAMPLE VALUES FOR QUICK START
# =============================================================================
# For quick development setup, you can use these values:
#
# NODE_ENV=development
# DOMAIN=localhost
# NEXT_PUBLIC_API_URL=http://localhost:8443/api
# DATABASE_URL=file:./data/dev.db
# JWT_SECRET=dev-jwt-secret-change-in-production
# ACCESS_TOKEN_TTL_MIN=15
# REFRESH_TOKEN_TTL_DAYS=7
# UPLOAD_DIR=./uploads
# PORT=5000
# LOG_LEVEL=debug
# AUTO_MIGRATE=true
# DEBUG=true